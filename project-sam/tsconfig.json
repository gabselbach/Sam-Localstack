{
   
    "compilerOptions": {
      "lib": ["es2022", "dom"],
      "module": "commonjs",
      "target": "es2022",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": false,
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,  
      "baseUrl": "./",
      "paths": {
        "@utils/*": ["utils/*"],
      },
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }
 